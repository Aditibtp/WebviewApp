<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aditisharma.webviewlaunch.MainActivity">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="0dp"
        android:layout_height="500dp"
        tools:layout_editor_absoluteY="-5dp"
        tools:layout_editor_absoluteX="2dp">
    <EditText
        android:id="@+id/url_text_view"
        android:layout_height="40dp"
        android:layout_width="271dp"
        android:text="https://media.w3.org/2010/05/sintel/trailer.mp4"
        tools:layout_x="200px"
        tools:layout_y="100px"
        tools:layout_editor_absoluteY="100dp"
        tools:layout_editor_absoluteX="100dp"
        android:layout_marginTop="71dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />

    <Button
        android:id="@+id/open_webview_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Open in webview"
        android:onClick="openWebView"
        tools:layout_x="200dp"
        tools:layout_y="300dp"
        tools:layout_editor_absoluteY="200dp"
        tools:layout_editor_absoluteX="100dp"
        android:layout_marginTop="104dp"
        android:layout_below="@+id/url_text_view"
        android:layout_alignLeft="@+id/url_text_view"
        android:layout_alignStart="@+id/url_text_view"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
